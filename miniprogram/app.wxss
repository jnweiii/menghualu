/**app.wxss**/
@import "./styles/theme.wxss";
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: var(--color-paper);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}