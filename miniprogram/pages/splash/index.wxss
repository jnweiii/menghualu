.splash-page {
  position: relative;
  width: 100%;
  min-height: 100vh;
  overflow: hidden;
  background: var(--color-paper);
}

/* 背景层：用柔和渐变模拟画卷底色 */
.splash-background {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, #dfe9f3 0%, #f8f6f0 50%, #f2e6da 100%);
  transform: scale(1.06);
  filter: blur(0px);
  animation: slowZoom 6s ease-in-out infinite;
}

/* 轻微遮罩，增强文字可读性 */
.splash-mask {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.45);
  backdrop-filter: blur(2px);
}

.splash-content {
  position: relative;
  z-index: 1;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
  text-align: center;
  color: var(--color-ink);
  animation: fadeInUp 1.2s ease-out;
}

.splash-logo {
  font-size: 44rpx;
  letter-spacing: 4rpx;
  font-weight: 600;
  color: var(--color-tianqing);
  margin-bottom: 24rpx;
}

.splash-slogan {
  font-size: 28rpx;
  color: var(--color-ink-light);
  margin-bottom: 32rpx;
}

.splash-tip {
  font-size: 24rpx;
  color: #9b8f7f;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(24rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slowZoom {
  0%,
  100% {
    transform: scale(1.04);
  }
  50% {
    transform: scale(1.08);
  }
}
