.topic-page {
  padding: 32rpx 28rpx 80rpx;
  color: var(--color-ink);
}

.topic-header {
  margin-bottom: 20rpx;
}

.topic-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.topic-subtitle {
  font-size: 24rpx;
  color: var(--color-ink-light);
}

.topic-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.topic-tag {
  padding: 10rpx 22rpx;
  border-radius: 999rpx;
  background: #f1ece4;
  color: var(--color-ink-light);
  font-size: 24rpx;
}

.topic-tag.is-active {
  background: var(--color-xiahong);
  color: var(--color-white);
}

.topic-map {
  height: 520rpx;
  background: #f3efe8;
  border: 2rpx solid var(--color-border);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topic-placeholder {
  color: #9b8f7f;
  font-size: 26rpx;
}

.topic-panel {
  background: var(--color-white);
  border: 2rpx solid var(--color-border);
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
}

.topic-panel-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.topic-panel-desc {
  font-size: 24rpx;
  color: var(--color-ink-light);
  line-height: 1.6;
}
