.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5d95a9;
  margin-bottom: 30rpx;
  margin-top: 40rpx;
}

.time-section, .preference-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.time-row, .preference-row {
  display: flex;
  gap: 20rpx;
}

.time-item {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #666;
}

.preference-item {
  padding: 20rpx 40rpx;
  background-color: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
}

/* 激活状态 */
.time-item.active {
  background-color: #5d95a9;
  border-color: #5d95a9;
  color: #ffffff;
}

.preference-item.active {
  background-color: #5d95a9;
  border-color: #5d95a9;
  color: #ffffff;
}

/* 规划按钮 */
.plan-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  width: calc(100% - 60rpx);
}

.plan-btn.enabled {
  background-color: #5d95a9;
  color: #ffffff;
}

.plan-btn.disabled {
  background-color: #cccccc;
  color: #f0f0f0;
}