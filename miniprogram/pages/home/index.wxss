.home-page {
  padding: 32rpx 28rpx 80rpx;
  color: var(--color-ink);
}

.home-hero {
  background: linear-gradient(135deg, rgba(141, 187, 210, 0.16), rgba(198, 90, 90, 0.12));
  border: 2rpx solid var(--color-border);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.home-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--color-ink);
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.home-subtitle {
  font-size: 26rpx;
  color: var(--color-ink-light);
}

.home-section {
  background: var(--color-white);
  border: 2rpx solid var(--color-border);
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.04);
}

.home-section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 14rpx;
  color: var(--color-ink);
}

.home-section-desc {
  font-size: 24rpx;
  line-height: 1.6;
  color: var(--color-ink-light);
  margin-bottom: 24rpx;
}

.home-primary-button {
  width: 100%;
  background: var(--color-xiahong);
  color: var(--color-white);
  border-radius: 999rpx;
  padding: 18rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.home-primary-button::after {
  border: none;
}
