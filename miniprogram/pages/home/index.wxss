.home-page {
  position: relative;
  height: 100vh;
  padding: 80rpx 0 40rpx; 
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
}

.global-background { position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; z-index: -2; }
.home-deco { position: fixed; right: 0; bottom: 0; width: 450rpx; height: 450rpx; z-index: -1; opacity: 0.3; }

.home-hero { 
  margin-bottom: 60rpx; 
  text-align: center; 
}
.home-title { 
  font-family: "Zhi Mang Xing", "STSong", serif;
  font-size: 54rpx; 
  font-weight: bold; 
  color: #FFFFFF; 
  letter-spacing: 6rpx; 
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2); 
}

.home-subtitle { 
  font-size: 26rpx; 
  color: #FFFFFF; 
  opacity: 0.9;
  margin-top: 48rpx; 
}

.standard-card {
  position: relative;
  width: 630rpx;  
  height: 200rpx; 
  margin-bottom: 32rpx; 
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  background: rgba(248, 244, 235, 0.9); 
  z-index: 1;
}

.first-card  { border: 2rpx solid #5B9AA0; }
.red-card    { border: 2rpx solid #E86B5C; }
.green-card  { border: 2rpx solid #77A88D; }
.yellow-card { border: 2rpx solid #D4A373; }

.card-bg-layer { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.7; }

.icon-box-clean {
  width: 130rpx; 
  height: 130rpx;
  margin-left: 40rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}
.section-icon-full { width: 100%; height: 100%; display: block; }

.section-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* --- 长方形内文字标题样式 --- */
.home-section-title {
  /* 应用云端加载的书法字体 */
  font-family: "Zhi Mang Xing", serif;
  font-size: 38rpx; 
  color: #3E2723;
  line-height: 48rpx;
  /* 适当上移，对应你之前的图片上移需求 */
  margin-top: -8rpx; 
  margin-bottom: 8rpx;
  white-space: nowrap;
}

.home-section-desc { font-size: 22rpx; color: #7A6C5D; line-height: 1.4; }

.arrow-right { font-size: 38rpx; font-weight: bold; margin-right: 40rpx; }
.first-card  .arrow-right { color: #5B9AA0; }
.red-card    .arrow-right { color: #E86B5C; }
.green-card  .arrow-right { color: #77A88D; }
.yellow-card .arrow-right { color: #D4A373; }

.footer-text { 
  position: absolute;
  bottom: 25rpx; 
  width: 100%;
  text-align: center;
  font-family: "Noto Serif SC", "STSong", serif; 
  font-size: 24rpx;    
  line-height: 36rpx; 
  color: #3E2723;     
  opacity: 0.45;      
  letter-spacing: 1rpx;
}