/* 主色调：#5d95a9 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
}

/* 地图区域 */
.map-section {
  position: relative;
  width: 100%;
  height: 42vh;
  background-color: #e9ecef;
  flex-shrink: 0;
  transition: height 0.28s cubic-bezier(0.22, 1, 0.36, 1);
}

.map-section-dragging {
  transition: none;
}

/* 图例样式 */
.map-legend {
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  z-index: 999;
  border: 2rpx solid #f0f0f0;
  transition: padding 0.24s ease;
}

.map-legend-collapsed {
  padding: 18rpx 24rpx;
}

.legend-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.legend-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 0;
}

.legend-toggle {
  font-size: 22rpx;
  color: #5d95a9;
  background-color: #eef6f9;
  border-radius: 20rpx;
  padding: 4rpx 14rpx;
  line-height: 1.4;
  flex-shrink: 0;
}

.legend-items {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 12rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-color {
  width: 40rpx;
  height: 16rpx;
  border-radius: 8rpx;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

.route-mode-panel {
  margin-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
  padding-top: 14rpx;
}

.route-mode-title {
  font-size: 22rpx;
  color: #5d95a9;
  margin-bottom: 10rpx;
}

.route-mode-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.route-mode-chip {
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #5d95a9;
  border: 2rpx solid #c7dce4;
  background-color: #f4fafc;
}

.route-mode-chip-active {
  color: #ffffff;
  background-color: #5d95a9;
  border-color: #5d95a9;
}

.route-loading {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #d2704d;
}

/* 行程区域 */
.itinerary-section {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 0;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -50rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.itinerary-drag-zone {
  position: sticky;
  top: 0;
  z-index: 30;
  width: 100%;
  padding: 12rpx 0 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.itinerary-drag-handle {
  width: 84rpx;
  height: 8rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #d6e5eb 0%, #b7d3de 100%);
}

.itinerary-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.itinerary-toggle {
  font-size: 24rpx;
  color: #5d95a9;
  background-color: #e8f2f5;
  border-radius: 24rpx;
  padding: 8rpx 18rpx;
  flex-shrink: 0;
}

.itinerary-header {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.days-summary {
  font-size: 28rpx;
  color: #5d95a9;
  margin-bottom: 12rpx;
}

.route-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

/* 时间线样式 */
.timeline {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

.day-item {
  background-color: #ffffff;
}

.day-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 24rpx;
  border-left-width: 8rpx;
  border-left-style: solid;
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.day-number {
  color: #2c3e50;
}

.day-style {
  font-size: 26rpx;
  font-weight: 400;
  color: #666;
}

/* 景点列表 - 修复颜色点显示 */
.spots-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.spot-item {
  display: flex;
  gap: 20rpx;
  position: relative;
  align-items: flex-start;
}

.spot-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-top: 8rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.spot-content {
  flex: 1;
  min-width: 0;
}

.spot-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.spot-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.spot-meta {
  display: flex;
  gap: 24rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.time {
  font-size: 24rpx;
  color: #d2704d;
  background-color: #fff0e8;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  display: inline-flex;
  align-items: center;
}

.transport {
  font-size: 24rpx;
  color: #5d95a9;
  background-color: #e8f2f5;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  display: inline-flex;
  align-items: center;
}

.spot-tip {
  font-size: 24rpx;
  color: #5d95a9;
  background-color: rgba(93, 149, 169, 0.08);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  margin-top: 8rpx;
  display: inline-block;
}

/* 景点标注气泡 */
.spot-callout {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 自定义滚动条 */
.itinerary-section::-webkit-scrollbar {
  width: 6rpx;
}

.itinerary-section::-webkit-scrollbar-thumb {
  background-color: #ddd;
  border-radius: 6rpx;
}

.itinerary-section::-webkit-scrollbar-track {
  background-color: #f5f5f5;
}